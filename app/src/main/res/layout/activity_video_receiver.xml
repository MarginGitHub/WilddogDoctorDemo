<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/bg"
             tools:context="com.zd.wilddogdoctordemo.ui.doctor.VideoReceiverActivity">

    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.wilddog.video.WilddogVideoView
            android:id="@+id/remote_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.wilddog.video.WilddogVideoView
            android:id="@+id/local_view"
            android:layout_width="140dp"
            android:layout_height="190dp"
            android:layout_gravity="top|right"/>
        <ImageView
            android:id="@+id/hung_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hung_up"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"/>
    </FrameLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/accept_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/user_head_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                android:src="@drawable/head"/>
            <TextView
                android:id="@+id/user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_head_iv"
                android:layout_marginTop="10dp"
                android:text="董先生"/>
            <ImageView
                android:id="@+id/accept_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/reject_iv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/ring_up"/>
            <ImageView
                android:id="@+id/reject_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/accept_iv"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"
                android:layout_marginEnd="60dp"
                android:src="@drawable/hung_up"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
